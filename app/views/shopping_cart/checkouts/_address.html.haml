=checkout_form(:address) do |f|
  .row
    .col-md-6
      %h3= t('.billing')
      .billing-address
        =render 'shopping_cart/addresses/form', address: :billing_address, form: f
    .col-md-6
      %h3= t('.shipping')
      =f.check_box :use_billing_address, class: 'use-billing'
      =f.label :use_billing_address, t('.use-btn'), class: 'use-billing'
      .shipping-address
        =render 'shopping_cart/addresses/form', address: :shipping_address, form: f