=form_for @form, url: checkout_path, remote:true, html: {method: :put, class:'checkout_form'} do |f|
  =f.hidden_field 'step', value: :address
  .row
    .col-md-6
      %h3= t('.billing')
      .billing-address
        =render 'addresses/form', address: :billing_address, form: f
    .col-md-6
      %h3= t('.shipping')
      =f.check_box :use_billing_address, class: 'use-billing'
      =f.label :use_billing_address, t('.use-btn'), class: 'use-billing'
      .shipping-address
        =render 'addresses/form', address: :shipping_address, form: f
  =render 'continue_btn', f:f