=form.fields_for address do |f|
  -[:firstname,:lastname, :street_address, :city, :zip, :phone].each do |field|
    .form-group
      = f.label field
      = error_span([address, field])
      = f.text_field field, class: 'form-control'

  .form-group
    = f.label :country_id
    = error_span([address, :country_id])
    = f.collection_select :country_id, Country.all, :id, :title, {}, class: 'form-control'